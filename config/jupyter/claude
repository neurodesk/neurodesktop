#!/bin/bash
# Claude Code wrapper script
# Copies ~/AGENT.md to current directory as CLAUDE.md, then starts Claude Code

# Copy AGENT.md from home directory to current directory as CLAUDE.md
if [ ! -f ./CLAUDE.md ]; then
    cp /opt/jovyan/AGENT.md ./CLAUDE.md
fi

# Start Claude Code using the actual binary path (not this wrapper)
# The npm global install puts claude in /usr/local/bin
exec /usr/bin/claude "$@"

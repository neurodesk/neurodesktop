#!/bin/bash
# Gemini CLI wrapper script
# Copies AGENT.md to current directory as GEMINI.md, then starts Gemini CLI

# Copy AGENT.md from /opt to current directory as GEMINI.md
if [ ! -f ./GEMINI.md ]; then
    cp /opt/AGENT.md ./GEMINI.md
fi

# Copy settings.json from home directory to current directory's .gemini folder
if [ ! -f ./.gemini/settings.json ]; then
    mkdir -p ./.gemini
    cp /opt/jovyan/.gemini/settings.json ./.gemini/settings.json
fi

# Start Gemini CLI using the actual binary path (not this wrapper)
exec /usr/bin/gemini "$@"

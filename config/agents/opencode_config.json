{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["/opt/AGENT.md"],

  // Jetstream: GPT-oss-120b
  "model": "jetstream/gpt-oss-120b",

  // Jetstream: DeepSeek-R1
  // "model": "jetstream-deepseek/DeepSeek-R1",

  "provider": {
    "jetstream": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "JetStream",
      "options": {
        "baseURL": "https://llm.jetstream-cloud.org/v1"
      },
      "models": {
        "gpt-oss-120b": {
          "name": "gpt-oss-120b"
        }
      }
    },
    "jetstream-deepseek": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "JetStream DeepSeek",
      "options": {
        "baseURL": "https://llm.jetstream-cloud.org/sglang/v1"
      },
      "models": {
        "DeepSeek-R1": {
          "name": "DeepSeek-R1"
        }
      }
    }
  }
}

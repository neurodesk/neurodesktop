{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "/opt/AGENT.md"
  ],
  "model": "neurodesk/devstral-small-2",
  "provider": {
    "neurodesk": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Neurodesk vLLM",
      "options": {
        "baseURL": "https://llm.neurodesk.org/v1",
        "apiKey": "{env:NEURODESK_API_KEY}"
      },
      "models": {
        "devstral-small-2": {
          "name": "Devstral Small 2 24B",
          "limit": {
            "context": 131000,
            "output": 8192
          }
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Local Ollama",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1"
      },
      "models": {
        "neurodesk": {
          "name": "neurodesk"
        },
        "qwen3-coder-next:latest": {
          "name": "qwen3-coder-next:latest"
        },
        "devstral-16k:latest": {
          "name": "devstral-16k:latest",
          "limit": {
            "context": 16384,
            "output": 8192
          }
        },
        "codellama:7b-code": {
          "name": "codellama:7b-code"
        }
      }
    },
    "jetstream": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "JetStream",
      "options": {
        "baseURL": "https://llm.jetstream-cloud.org/v1"
      },
      "models": {
        "gpt-oss-120b": {
          "name": "gpt-oss-120b"
        }
      }
    },
    "jetstream-deepseek": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "JetStream DeepSeek",
      "options": {
        "baseURL": "https://llm.jetstream-cloud.org/sglang/v1"
      },
      "models": {
        "DeepSeek-R1": {
          "name": "DeepSeek-R1"
        }
      }
    }
  }
}
